<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.profile.finish_registration.AddPhoneNumberFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgr_image_back"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:src="@drawable/ic_left_24" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/image_add_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_add_phone_number" />

    <EditText
        android:id="@+id/et_add_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_add_phone_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:hint="0(000) 000 000"
        android:inputType="phone"
        android:maxLength="15"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_further"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_add_phone_number"
        android:layout_marginHorizontal="@dimen/enter_login_margin_horizontal"
        android:layout_marginTop="@dimen/user_name_margin_top"
        android:text="@string/further"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textStyle="bold"
        app:cornerRadius="20dp" />
</RelativeLayout>